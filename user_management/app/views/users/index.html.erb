<h1>user details</h1>
<style>
table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
}

td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
}

tr:nth-child(even) {
    background-color: #dddddd;
}
</style>


<table>
	<tr>
		<th>Firstname</th>
		<th>Lastname</th>
		<th>Email</th>
</tr>


<% @users.each do |user| %>
<tr>		
<td><%= user.firstname %></td>
<td><%= user.lastname %></td>
<td><%= user.email %></td>

<td><%= link_to "Edit", user_edit_path(user)%></td>
<td><%= link_to "Destroy", user_destroy_path(user), 
method: :delete,
data: {confirm: "Are you sure?"} %></td>
<td><%= link_to "show", user_show_path(user)%></td>


</tr>
<% end %>
</table>
